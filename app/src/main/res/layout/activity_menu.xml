<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitys.MenuActivity">



    <android.support.v7.widget.CardView
        android:id="@+id/cardViewAdoptar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_adoptar_icon"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adoptar"
                android:textColor="@color/colorIconText"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>




    <android.support.v7.widget.CardView
        android:id="@+id/cardViewPerdidos"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_perdidos_icon"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perdidos"
                android:textColor="@color/colorIconText"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewApadrinar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cardViewAdoptar"
        android:layout_marginStart="43dp"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_hogares_icon"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hogares Transicion"
                android:textColor="@color/colorIconText"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="16sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewHogaresTransicion"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="20dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/cardViewPerdidos"
        android:layout_marginEnd="43dp"
        android:layout_marginTop="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_apadrinar_icon"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apadrinar"
                android:textColor="@color/colorIconText"
                android:layout_gravity="center"
                android:textSize="16sp"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>